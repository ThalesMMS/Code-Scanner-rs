{
  "code_extensions": [
    ".py",
    ".js",
    ".ts",
    ".jsx",
    ".tsx",
    ".java",
    ".rs",
    ".go"
  ],
  "ignore_dirs": [
    "node_modules",
    "dist",
    "build",
    "__pycache__",
    ".git"
  ],
  "ignore_files": [
    "*.log",
    "*.lock",
    ".DS_Store"
  ],
  "ignore_extensions": [
    ".pyc",
    ".png",
    ".jpg",
    ".gif"
  ],
  "target_subdirs": [
    "src",
    "lib",
    "app"
  ],
  "max_file_size": 1048576,
  "include_hidden": false
}
